<UserControl x:Name="navButton" x:Class="AppWindows.Controls.HomeNavButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" MinHeight="120" MinWidth="100">
    <Grid>
        <Image MaxHeight="90" Source="{svgc:SvgImage Source=Icons/OpenFolder.svg}" Height="90" VerticalAlignment="Top" HorizontalAlignment="Stretch" Width="90"/>
        <Label x:Name="buttonLabel" BorderBrush="Black" BorderThickness="0,0,0,1" Content="{Binding Path=ButtonText, ElementName=navButton}" MaxHeight="24" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="24" FontSize="16" FontWeight="Bold" Padding="0,0,0,4" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
    </Grid>
</UserControl>
